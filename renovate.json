{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        ":enablePreCommit"
    ],
    "timezone": "Asia/Ho_Chi_Minh",
    "labels": [
        "dependencies",
        "renovate"
    ],
    "assignees": [],
    "reviewers": [],
    "prConcurrentLimit": 3,
    "prHourlyLimit": 2,
    "semanticCommits": "enabled",
    "commitMessagePrefix": "chore(deps):",
    "vulnerabilityAlerts": {
        "enabled": true,
        "labels": [
            "security"
        ]
    },
    "packageRules": [
        {
            "description": "Docker category settings",
            "matchCategories": [
                "docker"
            ],
            "enabled": true,
            "pinDigests": false
        },
        {
            "description": "Docker images in lgtm-stack docker-compose",
            "matchDatasources": [
                "docker"
            ],
            "matchFileNames": [
                "lgtm-stack/docker-compose.yml"
            ],
            "enabled": true
        },
        {
            "description": "Group Grafana stack updates together",
            "matchPackageNames": [
                "grafana/{/,}**"
            ],
            "groupName": "grafana-stack",
            "reviewers": []
        },
        {
            "description": "Group Prometheus exporters together",
            "matchPackageNames": [
                "prom/{/,}**"
            ],
            "groupName": "prometheus-exporters"
        },
        {
            "description": "Group MinIO updates together",
            "matchPackageNames": [
                "minio/{/,}**"
            ],
            "groupName": "minio"
        },
        {
            "description": "Separate major updates for careful review",
            "matchUpdateTypes": [
                "major"
            ],
            "enabled": true,
            "labels": [
                "major-update"
            ],
            "automerge": false,
            "groupName": null
        },
        {
            "description": "Auto-approve minor and patch updates",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "enabled": true,
            "automerge": false
        },
        {
            "description": "Security updates with high priority",
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "labels": [
                "security"
            ],
            "automerge": false,
            "schedule": [
                "at any time"
            ]
        }
    ],
    "hostRules": []
}